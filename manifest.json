{
  "manifest_version": 2,

  "name": "Nowhere to Hide",
  "description": "The riskiest extension known on Earth.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "*://*.google.com/",
    "https://ajax.googleapis.com/"
  ]
}